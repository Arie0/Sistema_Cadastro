<Window x:Class="proj1.Views.FornecedorView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:proj1.Views"
        mc:Ignorable="d"
        Title="Fornecedor" Height="696" Width="750" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" Cursor="">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Cadastro de Fornecedores" FontSize="22" FontWeight="Bold" 
                   HorizontalAlignment="Left" Foreground="#333" Margin="234,10,0,30"/>
        <Label Content="ID:" FontSize="14" FontWeight="Bold" Margin="50,37,590,307" Grid.Row="1"/>
        <TextBox Text="{Binding FornecedorSelecionado.ID}" Padding="5" IsReadOnly="True" Margin="154,36,491,307" Grid.Row="1" TextChanged="TextBox_TextChanged" IsEnabled="False"/>
        <Label Content="Nome:" FontSize="14" FontWeight="Bold" Margin="51,95,576,249" Grid.Row="1"/>
        <TextBox Text="{Binding FornecedorSelecionado.Nome}" Padding="5" Margin="154,94,208,249" Grid.Row="1"/>
        <Label Content="CNPJ:" FontSize="14" FontWeight="Bold" Margin="51,159,576,187" Grid.Row="1"/>
        <TextBox Text="{Binding FornecedorSelecionado.CNPJ}" Padding="5" Margin="154,156,276,187" Grid.Row="1"/>
        <Label Content="Telefone:" FontSize="14" FontWeight="Bold" Margin="50,220,577,124" Grid.Row="1"/>
        <TextBox Text="{Binding FornecedorSelecionado.Telefone}" Padding="5" Margin="155,219,355,124" Grid.Row="1"/>
        <Label Content="Email:" FontSize="14" FontWeight="Bold" Margin="51,269,577,76" Grid.Row="1"/>
        <TextBox Text="{Binding FornecedorSelecionado.Email}" Padding="5" Margin="155,268,235,76" Grid.Row="1"/>
        <Label Content="Endereço:" FontSize="14" FontWeight="Bold" Margin="51,321,564,23" Grid.Row="1"/>
        <TextBox Text="{Binding FornecedorSelecionado.Endereco}" Padding="5" Margin="154,321,90,23" Grid.Row="1"/>
        <Button Content="Adicionar" Command="{Binding AdicionarFornecedorCommand}" Cursor="Hand" Margin="580,69,10,342" Grid.RowSpan="2" />
        <Button Content="Atualizar" Command="{Binding AtualizarFornecedorCommand}" Cursor="Hand" Margin="580,50,10,290" Grid.Row="1"/>
        <Button Content="Excluir" Command="{Binding RemoverFornecedorCommand}" Margin="580,108,10,232" Grid.Row="1"/>
        <Button Content="Limpar" Command="{Binding LimparCamposCommand}" Cursor="Hand" Margin="580,166,10,173" Grid.Row="1"/>

        <DataGrid Grid.Row="3" ItemsSource="{Binding Fornecedores}" AutoGenerateColumns="True" 
                  SelectedItem="{Binding FornecedorSelecionado}" Margin="10,10,10,0"/>
        <Label Content="" HorizontalAlignment="Left" Margin="119,-8,0,0" VerticalAlignment="Top" Height="59" Width="85">
            <Label.Background>
                <ImageBrush ImageSource="/Views/graph_marketing_time_strategy_finance_management_business_icon_263055.png"/>
            </Label.Background>
        </Label>
    </Grid>
</Window>
